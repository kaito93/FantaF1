@model FantaF1.Models.CalcolaPronosticiGaraViewModel

<style>
    .selectPick {
        background-color: lightblue;
    }
</style>

<div class="col-md-3" style="float: left;">
    <span>Seleziona fanta campionato</span>
    @Html.DropDownList("FantaCampionati", Model.FantaCampionatiList, new { @class = "selectPick" })
