@model FantaF1.Models.CalcolaPronosticiGaraViewModel

<style>
    .selectPick{
        background-color: lightblue;
    }
</style>

<div class="col-md-3" style="float: left;">
    <span>Seleziona fanta campionato</span>
    @Html.DropDownList("FantaCampionatiList", Model.FantaCampionatiList, new { @class = "selectPick" })
</div>

<div class="col-md-3" style="float: left;">
    <span>Seleziona GP</span>
    @Html.DropDownList("CircuitiList", Model.CircuitiList, new { @class = "selectPick" })
</div>

<div class="col-md-5" style="float:left; margin-top:25px;">
    <a id="buttonCalcola" href="javascript: ClickOnButtonCalcolaRisultatiPronostici();" class="btn btn-primary active disabled" role="button" aria-pressed="true" aria-disabled="true">Calcola risultati per la gara selezionata</a>
</div>


